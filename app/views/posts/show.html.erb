
<div class="row">	
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<%= link_to "Volver", root_path%>
		<div>
			<h2 ><%=  @post.title %></h2>	
			<p><%= markdown(@post.body) %></p>		
		</div>
		<hr>
		<% @post.comments.each do |comment| %>
			<div class="card h-25">
				<div class="card-header">
					<small>Usuario <%= comment.user.email%> comento hace <%= time_ago_in_words(comment.created_at) %> </small>
				</div>
				<div class="card-body h-25">
					<blockquote class="blockquote mb-0">
						<p><small><%= markdown(comment.body) %> </small></p>      			
					</blockquote>
				</div>
			</div>
			<br>
		<% end %> 		

		<div>				
			<%if user_signed_in? %>		  	
			<%= render partial: "/comments/form_comment", locals: { post: @post, comment: @post.comments.new} %>
			<% end %>
		</div>
	</div>
	<div class="col-md-2"></div>
</div>

